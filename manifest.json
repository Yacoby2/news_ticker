{
  "manifest_version": 2,

  "name": "News Ticker",
  "description": "This extension displays a news ticker at the bottom of every web page",
  "version": "0.1",
  "permissions": [
    "http://www.theguardian.com/uk/rss"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-2.1.0.min.js", "feed_handler.js", "news_ticker.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}
