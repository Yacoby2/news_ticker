{
  "manifest_version": 2,

  "name": "News Ticker",
  "description": "This extension displays a news ticker at the bottom of every web page",
  "version": "0.1",
  "permissions": [
    "https://secure.flickr.com/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}
